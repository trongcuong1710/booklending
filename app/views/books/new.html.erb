<% provide(:title, "Add Book") %>

<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			<h1 class="page-header">Add New Book</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
			<form action="/books/create" method="post">
				<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<div class="form-group">
					<label for="title">Book Title <span style="color: red">*</span></label>
					<input type="text" class="form-control" id="title" name="book[title]" placeholder="Book Title">
				</div>
				<div class="form-group">
					<label for="author">Author <span style="color: red">*</span></label>
					<input type="text" class="form-control" id="author" name="book[author]" placeholder="Author">
				</div>
				<div class="form-group">
					<label for="summary">Book Summary</label>
					<textarea class="form-control" rows="3" id="summary" name="book[summary]" placeholder="A brief summary of the book"></textarea>
				</div>
				<button type="submit" class="btn btn-primary">Save</button>
			</form>
		</div>
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6"></div>
	</div>
</div>

